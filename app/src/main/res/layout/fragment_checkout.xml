<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/checkoutLayout"
    android:visibility="invisible"
    tools:context=".Fragments.CheckoutFragment">

    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/frameLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_70sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:text="@string/checkout"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerCheckOut"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                tools:listitem="@layout/rc_order" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_8sdp">

                <LinearLayout
                    android:id="@+id/linearLayout8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="50dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/street"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:paddingHorizontal="@dimen/_18sdp"
                            android:text="Shewrapara, Mirpur, Dhaka-1216"
                            android:textColor="@color/black3"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/houseNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:paddingHorizontal="@dimen/_18sdp"
                            android:text="House no: 938"
                            android:textColor="@color/black3"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/roadNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:paddingHorizontal="@dimen/_18sdp"
                            android:text="Road no: 9"
                            android:textColor="@color/black3"
                            android:textSize="@dimen/_14sdp" />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginHorizontal="@dimen/_18sdp"
                        android:layout_marginTop="10dp"
                        android:background="@color/gray3"

                        />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/_18sdp"
                        android:paddingTop="@dimen/_14sdp">

                        <TextView
                            android:id="@+id/subtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="@string/subtotal"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/textSubtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:textColor="@color/black1"
                            android:textSize="@dimen/_14sdp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/_18sdp"
                        android:paddingTop="@dimen/_14sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="@string/discount"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/textDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="%0"
                            android:textColor="@color/black1"
                            android:textSize="16sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:paddingHorizontal="@dimen/_18sdp"
                        android:paddingTop="@dimen/_14sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="@string/shipping"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/textShipping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="$0.00"
                            android:textColor="@color/black1"
                            android:textSize="@dimen/_14sdp" />
                    </FrameLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginHorizontal="@dimen/_18sdp"
                        android:layout_marginTop="10dp"
                        android:background="@color/gray3"

                        />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/_18sdp"
                        android:paddingVertical="@dimen/_6sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="@string/total"
                            android:textColor="@color/black2"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/textTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="0"
                            android:textColor="@color/black1"
                            android:textSize="@dimen/_14sdp" />
                    </FrameLayout>

                </LinearLayout>

            </ScrollView>


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBuy"
            style="@style/buttonStyle"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_18sdp"
            android:text="@string/buy" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>