<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Design1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/toolbarColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/cairo_regular</item>
    </style>



    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/border</item>
        <item name="colorPrimaryVariant">@color/border</item>
        <item name="colorSecondary">@color/blue1</item>
        <item name="colorSecondaryVariant">@color/blue1</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/toolbarColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="fontFamily">@font/cairo_regular</item>

    </style>



    <style name="splashStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue1</item>
        <item name="colorPrimaryVariant">@color/blue1</item>
<!--        <item name="colorSecondary">@color/blue1</item>-->
<!--        <item name="colorSecondaryVariant">@color/blue1</item>-->
<!--        <item name="colorPrimaryDark">#667EEA</item>-->
<!--        <item name="colorAccent">@color/blue1</item>-->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/blue1</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog"/>


    <style name="LabelStyle" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/gray2</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
    </style>

    <style name="EditTextStyle" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/border</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:paddingBottom">@dimen/editTextPaddingB</item>
<!--        <item name="android:layout_marginTop">@dimen/_8sdp</item>-->
    </style>

    <style name="HeaderTitleStyle" parent="Theme.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_23sdp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/_20sdp</item>
    </style>



    <style name="buttonStyle">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">@dimen/_35sdp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeWidth">@dimen/_2sdp</item>
        <item name="colorPrimary">@color/border</item>
        <item name="colorOnSurface">#A6A6A6</item>
    </style>


    <style name="textSize">
        <item name="android:textSize">@dimen/_11sdp</item>
    </style>

